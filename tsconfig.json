{
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue"
    ]
}